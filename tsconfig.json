{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$templates": ["src/templates/index"],
      "$templates/*": ["src/templates/*"],
      "$components": ["src/components/index"],
      "$components/*": ["src/components/*"],
      "$types": ["src/types/index"],
      "$types/*": ["src/types/*"],
      "$images/*": ["src/images/*"]
    }
  }
}
