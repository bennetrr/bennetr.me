---
import {Category, ICategory} from '$components';

interface Props {
  name: string;
  description: string;
  url: string;
  image?: string;
  categories: ICategory[];
}

const {name, description, url, image, categories} = Astro.props;
---

<a href={url} target="_blank">
  <div class="hover:translate-y-1 flex flex-col items-center gap-x-8 rounded-md bg-slate-800 p-3 md:flex-row">

    <!--<div class="shrink-0">-->
    <!--    <img-->
    <!--      class="h-36 w-36 hover:translate-y-1"-->
    <!--      src={props.img.src}-->
    <!--      alt={props.img.alt}-->
    <!--      loading="lazy"-->
    <!--    />-->
    <!--</div>-->

    <div>
      <div class="flex flex-col items-center gap-y-2 md:flex-row">
        <div class="text-xl font-semibold">{name}</div>
        <div class="ml-3 flex flex-wrap gap-2">
          {categories.map(category => <Category name={category.name} color={category.color}/>)}
        </div>
      </div>

      <p class="mt-3 text-gray-400">{description}</p>
    </div>
  </div>
</a>
